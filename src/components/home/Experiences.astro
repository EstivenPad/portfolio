---
import { JOBS } from "../../constants/jobs";
---

<!-- EXPERIENCES -->

<section id="experience" class="mt-14 mb-8 max-w-screen lg:max-w-lg group/blue">
    <div class="z-20 -mx-6 px-6 sticky top-0 backdrop-blur-sm lg:backdrop-blur-none lg:static">
        <h2 class="pt-3 text-2xl font-semibold text-slate-100 lg:pl-5 group-hover/blue:text-sky-400 transition-all duration-500">Experience</h2>
    </div>

    <ul class="mt-2">
        {JOBS.map(experience => (
            <li class="group/list rounded-lg lg:px-5 py-2 lg:hover:bg-[#8892b020] lg:hover:shadow-[inset_0_1px_0_0_rgba(148,163,184,0.1)] transition-all duration-500 mt-3">
                <a class="flex flex-col md:flex-row gap-2" href={experience.url} target="_blank">
                    <div class="min-w-1/4 self-center pt-1">
                        <p class="text-sm font-semibold lg:text-xs group-hover/list:text-slate-100 transition-colors duration-500">{experience.duration}</p>    
                    </div>

                    <div class="flex min-w-3/4 flex-col pl-2 border-t-2 md:border-l-2 md:border-t-0 border-slate-400 group-hover/list:border-sky-400">
                        <span class="mb-2 md:block inline">
                            <p class="inline font-semibold text-slate-100 group-hover/list:text-sky-400 transition-colors duration-500">{experience.role}</p>
                            • 
                            <p class="inline group-hover/list:text-slate-100 transition-colors duration-500">{experience.company}</p>
                        </span>
            
                        <ul class="pl-4">
                            {experience.responsabilities.map(responsability => (
                                <li class="list-disc text-balance group-hover/list:text-slate-100 transition-colors duration-500">{responsability}</li>
                            ))}
                        </ul>
                    </div>
                </a>
            </li>
        ))}
    </ul>

    <span class="inline-block my-5 lg:pl-5 text-sm group/link">
        <a href="/assets/resume.pdf" target="_blank" class="font-semibold text-slate-100 group-hover/link:decoration-sky-400 transition-colors duration-500 group-hover/link:underline hover:cursor-pointer">
            View full résumé<svg class="inline w-5 h-5 stroke-slate-100 transition-transform group-hover/link:stroke-sky-400 group-hover/link:rotate-45 transition-all duration-500 group-hover/link:translate-x-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M7 17L17 7M17 7H8M17 7V16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
        </a>
    </span>
</section>